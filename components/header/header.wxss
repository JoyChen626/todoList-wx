/* components/header/header.wxss */
.header{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: #111111;
}
.full{
  height: 80rpx;
}
.header-box {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  position: relative;
  display: flex;
}

.photo-box {
  width: 60rpx;
  height: 60rpx;
  overflow: hidden;
  margin-left: 30rpx;
  margin-top: 10rpx;
  border-radius: 50%;
  background: #fff;
}

.photo {
  width: 100%;
  height: 100%;
}

.title-box {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}

.title-box text {
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
}

.icon-box {
  width: 60rpx;
  height: 60rpx;
  overflow: hidden;
  margin-right: 30rpx;
  margin-top: 10rpx;
  background: #fff;
}


