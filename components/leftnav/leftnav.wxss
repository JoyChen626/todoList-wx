/* components/leftNav/leftnav.wxss */
.leftnav{
  position: fixed;
  transition: .5s;
  padding: 100rpx 0;
  left: 0;
  transform: translateY(-50%);
  top: 50%;
  background: rgba(0, 0, 0, .5);
  border-radius: 0 100rpx 100rpx 0;
  overflow: hidden;
}
.img-box{
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
  border-radius: 50%;
  background: #eeeeee;
  margin: 0rpx auto;
}
.img-box image{
  width: 100%;
  height: 100%;
}
.name{
  line-height: 52rpx;
  height: 52rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: bold;
  color: #ffffff;
}
.btn-box{
  padding: 20rpx;
}
.item{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  text-align: center;
  color: #ffffff;
  margin: 10rpx 0;
  border-radius: 8rpx;
}