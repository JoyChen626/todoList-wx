page, .page {
  width: 100%;
  height: 100%;
}

.clearfix::after {
  display: block;
  clear: both;
  content: '';
}

.left {
  float: left;
}

.right {
  float: right;
}

/*全屏居中*/

.allCover {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 999;
}

/*上下左右居中*/

.setCenter {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

/*超出部分省略*/

.ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ellipsis2 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
